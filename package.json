{
  "name": "liquifi-core",
  "version": "1.0.0",
  "description": "Liquifi Smart Contracts",
  "main": "index.js",
  "scripts": {
    "gas-report": "hardhat node > /dev/null & env REPORT_GAS=true buidler test --network localhost ./test/gas-report/*.test.ts",
    "test": "hardhat test ./test/*.test.ts",
    "test:evm": "hardhat test ./test/*[!.ovm].test.ts",
    "test:ovm": "hardhat test ./test/*.ovm.test.ts",
    "typechain": "typechain --target=ethers-v5 --outDir typechain './artifacts/contracts/**/*[!dbg|ovm].json'",
    "clean": "hardhat clean && rm -rf typechain coverage cache",
    "compile": "hardhat compile --show-stack-traces",
    "coverage": "npx hardhat coverage --temp artifacts --network coverage",
    "deploy": "npx hardhat run --network rinkeby scripts/deploy.ts",
    "deploy_1": "npx hardhat run --network mainnet scripts/deploy.ts",
    "deploy_3": "npx hardhat run --network ropsten scripts/deploy.ts",
    "deploy_4": "npx hardhat run --network rinkeby scripts/deploy.ts",
    "size": "hardhat size-contracts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:liquifi-org/liquifi-core.git"
  },
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@eth-optimism/plugins": "0.0.12",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^1.0.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.0.2",
    "ethers": "^5.0.8",
    "hardhat": "^2.0.10",
    "solc": "0.7.0",
    "solidity-coverage": "^0.7.10",
    "ts-node": "^8.10.2",
    "typechain": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "truffle-contract-size": "^2.0.0",
    "ts-generator": "0.0.8"
  }
}
